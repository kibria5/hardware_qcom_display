soong_config_module_type {
    name: "target_board_platform_cc_library_shared",
    module_type: "cc_library_shared",
    config_namespace: "ANDROID",
    value_variables: ["target_board_platform"],
    properties: [
        "name",
    ],
}

target_board_platform_cc_library_shared {
    name: "gralloc.qcom",
    soong_config_variables: {
        target_board_platform: {
            name: "gralloc.%s",
            conditions_default: {
                name: "gralloc.qcom",
            },
        },
    },
    defaults: ["display_defaults"],
    vendor: true,
    relative_install_path: "hw",
    srcs: [
        "gr_device_impl.cpp",
    ],
    shared_libs: [
        "libqdMetaData",
        "libsync",
        "libgrallocutils",
        "libgralloccore",
        "android.hardware.graphics.mapper@2.0",
        "android.hardware.graphics.mapper@2.1",
    ],
    cflags: [
        "-DLOG_TAG=\"qdgralloc\"",
    ],
    header_libs: [
        "display_headers",
        "qti_kernel_headers",
    ],
}

cc_library_shared {
    name: "libgralloccore",
    defaults: ["display_defaults"],
    vendor: true,
    srcs: [
        "gr_allocator.cpp",
        "gr_buf_mgr.cpp",
        "gr_ion_alloc.cpp",
    ],
    shared_libs: [
        "libqdMetaData",
        "libdl",
        "libgrallocutils",
        "android.hardware.graphics.mapper@2.0",
        "android.hardware.graphics.mapper@2.1",
    ],
    cflags: [
        "-DLOG_TAG=\"qdgralloc\"",
        "-Wno-sign-conversion",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
    ] + select(soong_config_variable("qtidisplay", "target_uses_ycrcb_camera_encode"), {
        "true": ["-DUSE_YCRCB_CAMERA_ENCODE"],
        default: [],
    }) + select(soong_config_variable("qtidisplay", "target_uses_ycrcb_camera_preview"), {
        "true": ["-DUSE_YCRCB_CAMERA_PREVIEW"],
        default: [],
    }) + select(soong_config_variable("qtidisplay", "target_uses_ycrcb_venus_camera_preview"), {
        "true": ["-DUSE_YCRCB_CAMERA_PREVIEW_VENUS"],
        default: [],
    }),
    header_libs: [
        "display_headers",
        "qti_kernel_headers",
    ],
}

