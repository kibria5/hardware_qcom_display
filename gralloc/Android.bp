soong_config_module_type {
    name: "target_board_platform_cc_library_shared",
    module_type: "cc_library_shared",
    config_namespace: "ANDROID",
    value_variables: ["target_board_platform"],
    properties: [
        "name",
    ],
}

target_board_platform_cc_library_shared {
    name: "gralloc.qcom",
    soong_config_variables: {
        target_board_platform: {
            name: "gralloc.%s",
            conditions_default: {
                name: "gralloc.qcom",
            },
        },
    },
    defaults: ["display_defaults"],
    vendor: true,
    relative_install_path: "hw",
    srcs: [
        "gr_ion_alloc.cpp",
        "gr_allocator.cpp",
        "gr_buf_mgr.cpp",
        "gr_device_impl.cpp",
    ],
    shared_libs: [
        "libqdMetaData",
        "libsync",
        "libgrallocutils",
        "android.hardware.graphics.common@1.1",
    ],
    cflags: [
        "-DLOG_TAG=\"qdgralloc\"",
    ] + select(soong_config_variable("qtidisplay", "master_side_cp"), {
        "true": ["-DMASTER_SIDE_CP"],
        default: [],
    }),
    header_libs: [
        "display_headers",
        "qti_kernel_headers",
    ],
}

cc_library_shared {
    name: "libgrallocutils",
    defaults: ["display_defaults"],
    vendor: true,
    srcs: [
        "gr_utils.cpp",
        "gr_adreno_info.cpp",
    ],
    shared_libs: [
        "libqdMetaData",
        "libdl",
        "android.hardware.graphics.common@1.1",
    ],
    cflags: [
        "-DLOG_TAG=\"grallocutils\"",
        "-Wno-sign-conversion",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
    ],
    header_libs: [
        "display_headers",
        "qti_kernel_headers",
    ],
}
