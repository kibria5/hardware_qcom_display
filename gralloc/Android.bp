soong_config_module_type {
    name: "qtidisplay_libgrallocutils_cc_defaults",
    module_type: "cc_defaults",
    config_namespace: "qtidisplay",
    bool_variables: [
        "target_uses_ycrcb_camera_preview",
        "target_uses_ycrcb_venus_camera_preview",
        "target_uses_unaligned_nv21_zsl",
        "target_uses_unaligned_ycrcb",
    ],
    properties: ["cflags"],
}

qtidisplay_libgrallocutils_cc_defaults {
    name: "qtidisplay_libgrallocutils_defaults",
    defaults: ["display_defaults"],
    soong_config_variables: {
        target_uses_ycrcb_camera_preview: {
            cflags: ["-DUSE_YCRCB_CAMERA_PREVIEW"],
        },
        target_uses_ycrcb_venus_camera_preview: {
            cflags: ["-DUSE_YCRCB_CAMERA_PREVIEW_VENUS"],
        },
        target_uses_unaligned_nv21_zsl: {
            cflags: ["-DUSE_UNALIGNED_NV21_ZSL"],
        },
        target_uses_unaligned_ycrcb: {
            cflags: ["-DUSE_UNALIGNED_YCRCB"],
        },
    },
}

cc_library_shared {
    name: "libgrallocutils",
    defaults: ["qtidisplay_libgrallocutils_defaults"],
    vendor: true,
    srcs: [
        "gr_utils.cpp",
        "gr_adreno_info.cpp",
    ],
    shared_libs: [
        "libqdMetaData",
        "libdl",
        "android.hardware.graphics.common@1.2",
        "android.hardware.graphics.mapper@2.0",
        "android.hardware.graphics.mapper@2.1",
        "android.hardware.graphics.mapper@3.0",
        "android.hardware.graphics.mapper@4.0",
    ],
    cflags: [
        "-DLOG_TAG=\"qdgralloc\"",
        "-D__QTI_DISPLAY_GRALLOC__",
        "-Wno-sign-conversion",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
    ],
    header_libs: [
        "display_headers",
        "device_kernel_headers",
    ],
}
